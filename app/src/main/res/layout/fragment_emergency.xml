<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Used to direct user to website -->
    <Button
        android:id="@+id/hotlineBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Suicide Hotline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <!-- Used to direct user to website -->
    <Button
        android:id="@+id/therapyBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Find a Therapist"
        android:backgroundTint="@color/dblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <!-- Used to direct user to dial numpad -->
    <Button
        android:id="@+id/callBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Call Emergency Services"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <!-- Used to direct user to maps activity -->
    <Button
        android:id="@+id/mapBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Map of Hospitals"
        android:backgroundTint="@color/dblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />
</androidx.constraintlayout.widget.ConstraintLayout>